{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "experimentalDecorators": true,
    "types": ["node"],
    "rootDirs": ["src/sdk"],
    "outDir": "dist",
    "lib": ["es2020", "DOM"],
    "target": "es2015",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "src/scripts",
    "src/resources",
    "**/*.test.ts",
    "**/*.spec.ts",
    "examples"
  ],
  "include": ["src/sdk/**/*.ts", "src/index.ts", "!src/sdk/**/*.test.ts"]
}
